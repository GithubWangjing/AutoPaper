# Application configuration
# Copy this file to .env and fill in the values

# API Keys for different services
# ----------------------------
# OpenAI API Key (required for OpenAI models)
OPENAI_API_KEY=your_openai_api_key_here

# SiliconFlow API Key (required for SiliconFlow models)
SILICONFLOW_API_KEY=your_siliconflow_api_key_here

# SerpAPI Key (OPTIONAL - only needed if you want to use SerpAPI for Google Scholar)
# Get a free key at https://serpapi.com/
SERPAPI_KEY=

# Use scholarly library for Google Scholar (free, no API key needed)
USE_SCHOLARLY=True

# Default model and research source settings
# ----------------------------
# Valid model types: "openai", "siliconflow"
DEFAULT_MODEL_TYPE=siliconflow

# Valid research sources: "none", "arxiv", "google_scholar"
DEFAULT_RESEARCH_SOURCE=google_scholar

# Google Scholar Options:
# 1. Free open-source option: Set USE_SCHOLARLY=True (default)
# 2. SerpAPI option: Get a SerpAPI key and set it above

# App configuration
# ----------------------------
APP_SECRET_KEY=change_this_to_something_secure
DEBUG=False
PORT=5000
HOST=0.0.0.0

# API request configuration
# ----------------------------
REQUEST_TIMEOUT=60
MAX_RETRIES=3
BASE_DELAY=1.0

# ArXiv API configuration
# ----------------------------
ARXIV_MAX_RESULTS=10
ARXIV_SORT_BY=relevance  # Options: "relevance", "lastUpdatedDate", "submittedDate"

# Only required if using Google Scholar for research (research_source=google_scholar)
MCP_API_KEY=your_mcp_api_key_here

# Configuration 
# Valid model_types are: openai, siliconflow (default)
# Valid research_sources are: none (default), arxiv, google_scholar

# Optional API Endpoint Overrides
# MCP_ENDPOINT=custom_mcp_endpoint

# MCP (Model-Content-Provider) Server configuration for Google Scholar
MCP_BASE_URL=https://api.mcpserver.com/v1 